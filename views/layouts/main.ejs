<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Bilbo&family=Hanken+Grotesk:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Doto:wght@100..900&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Poppins:ital,wght@0,100..900;1,100..900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100..900;1,100..900&family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />

  <!-- Icons -->
  <script src="https://kit.fontawesome.com/c2a0df19f4.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

  <!-- CSS -->
  <!-- Global layout -->
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/page-css/page.css">
    <link rel="stylesheet" href="/css/page-css/effects.css">
    <link rel="stylesheet" href="/css/page-css/template.css">

    <!-- Per-page -->
    <% if (Array.isArray(pageStyles)) { %>
      <% pageStyles.forEach(style => { %>
        <link rel="stylesheet" href="<%= style %>">
      <% }) %>
    <% } %>

    <!-- Reusable UI components -->
    <link rel="stylesheet" href="/css/component-css/header.css">
    <link rel="stylesheet" href="/css/component-css/footer.css">
    <link rel="stylesheet" href="/css/component-css/button.css">
    <link rel="stylesheet" href="/css/component-css/card.css">

  <title><%= title || "Max Cole" %></title>
</head>
<body>
  <%- include('../partials/header') %>

  <main>
    <%- body %>
  </main>

  <%- include('../partials/footer') %>

  <!-- JS -->
  <script src="/JS-files/buttons.js"></script>
</body>
</html>