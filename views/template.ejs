<main id="project-page">
    <div id="info-card">
        <h1 id="page-header"><%= pageTitle %></h1>

        <div id="body-elements">

            <div id ="text-box">

                <div id="contributor-section">
                    <h2>Status: <%= status %></h2>
                    <h3>Contributors: <%= teamMembers.join(', ') %></h3>
                    <div id="github-button">
                        <img src="symbols/icons8-github.svg" alt="GitHub Icon" style="vertical-align: middle;"><a href="<%= githubLink %>" target="_blank">Github Repository</a>
                    </div>
                </div>

                <div id="skills-section">
                    <h2>Languages used</h2>
                    <p><%= languages.join(', ') %></p>
                
                    <h2>Skills used</h2>
                    <p><%= skills.join(', ') %></p>
                </div>

                <div id="description-section">
                    <h2>Description</h2>
                    <p><%= description %></p>
                </div>
            </div>
                
            <div id = "content-box">
                <video controls loop autoplay muted>
                    <source src="<%= videoSrc %>" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
    </div>
</main>